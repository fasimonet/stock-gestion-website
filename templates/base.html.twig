<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Pole plurimedia</title>

        {% block stylesheets %}
        <!-- Style css file -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <!-- Bootstrap framework -->
        <link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css">
        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- Latest compiled JavaScript for Bootstrap -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <!-- Latest compiled JavaScript for Quaggajs -->
        <script src="dist/quagga.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Gestion stock</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'home' %}active{% endif %}" href="{{ path("home") }}">Accueil</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'stock_management' %}active{% endif %}" href="{{ path("site") }}"> Gestion de stock</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'user_management' %}active{% endif %}" href="{{ path("user_pannel") }}">Gestion d'utilisateur</a>
                    </li>
                {% endif %}
                </ul>
                {% if not app.user %}
                    <a class="btn btn-secondary my-2 my-sm-0" href="{{ path("security_login") }}">Se connecter</a>
                {% else %}
                    <a class="btn btn-secondary my-2 my-sm-0" href="{{ path("security_logout") }}">Se d√©connecter</a>
                {% endif %}
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
